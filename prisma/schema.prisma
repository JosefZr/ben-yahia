generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  relationMode = "prisma"
  url      = env("DATABASE_URL")
}

enum Role{
  ADMIN
  USER
}
enum Status{
  confermer
  annuler
  en_attent
}
model User{
  id Int @id @default(autoincrement())
  name  String
  family_name String
  phone String 
  email String @unique
  password String 
  createdAt DateTime @default(now())
  status Status @default(en_attent)
  role Role @default(USER)
  age Int
  appointments Appointment[]
  posts Post[]
}
model Post{
  id Int  @id @default(autoincrement())
  title String
  content String
  published Boolean @default(false)
  author User @relation(fields: [authorId], references: [id])
  authorId Int

  @@index([authorId])
}
model Settings{
  id Int @id @default(autoincrement())
  maxAppointmentPerDay Int
  samedi String
  dimanche String
  lundi String
  mardi String
  mercredi String
  jeudi String
  vendredi String
}
model Day{
  id String @id @default(cuid())
  name String
  dayOfWeek Int
  openTime String
  closeTime String
}
model CloseDay{
  id String @id @default(cuid())
  date DateTime @unique
}
model Appointment {
  id        Int      @id @default(autoincrement())
  date      DateTime
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  createdAt DateTime @default(now())

  @@index([userId])
}
